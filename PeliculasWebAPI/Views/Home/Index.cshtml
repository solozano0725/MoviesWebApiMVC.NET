    <h1>PELICULAS APP</h1>
    
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Peliculas</h2>
           <div>
               <table id="tblList" class="table table-bordered table-hover">
                   <thead>
                       <tr>
                           <th>Nombre</th>
                           <th>Actor</th>
                           <th>Genero</th>
                           <th>Año</th>
                       </tr>
                       </thead>
                   <tbody></tbody>
